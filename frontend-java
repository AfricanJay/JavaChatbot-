        try {
            dos.writeUTF(txtChatUser.getText());
            if (txtChatUser.getText().equalsIgnoreCase("/quit")) {
                System.out.println("App has been terminated");
                System.exit(0);
            } else {                
                String AfricanJayBot = dis.readUTF();
                System.out.println("Respond "+ AfricanJayBot);
                labelChat.append("Kamu : " + txtChatUser.getText() + "\n" + AfricanJayBot + "\n");
                txtChatUser.setText("");
                txtChatUser.requestFocus();
        if (!txtChatUser.getText().equalsIgnoreCase("")) {
            try {
                dos.writeUTF(txtChatUser.getText());
                if (txtChatUser.getText().equalsIgnoreCase("/quit")) {
                    System.out.println("App has been terminated");
                    System.exit(0);
