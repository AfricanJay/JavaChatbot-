                    labelChat.append("Kamu : " + txtChatUser.getText() + "\n" + AfricanJayBot + "\n");
                    txtChatUser.setText("");
                    txtChatUser.requestFocus();
                }
            } catch (IOException e) {
            }
        } catch (IOException e) {
        }else{
            labelChat.append("Kamu:  \nBot : You cannot enter empty message\n");
